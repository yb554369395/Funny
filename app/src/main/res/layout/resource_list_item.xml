<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/tools">

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        android:textSize="20sp"
        android:id="@+id/tv_name" />

    <TextView
        android:text="@string/text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_text"
        android:layout_width="392dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_text"
        android:layout_alignLeft="@+id/tv_text"
        android:layout_alignStart="@+id/tv_text"
        android:layout_marginTop="10dp"
        fresco:actualImageScaleType="fitCenter"
        android:id="@+id/iv_image"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="400dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/tv_good"
        android:gravity="center"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ungood"
        android:drawableStart="@drawable/ungood"
        android:layout_marginTop="10dp"
        android:layout_marginStart="22dp"
        android:drawablePadding="10dp"
        android:layout_below="@+id/iv_image"
        android:layout_alignLeft="@+id/iv_image"
        android:layout_alignStart="@+id/iv_image" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/share"
        android:layout_marginTop="10dp"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:id="@+id/iv_share"
        android:layout_alignBottom="@+id/tv_comments"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/comments"
        android:drawableStart="@drawable/comments"
        android:layout_marginBottom="20dp"
        android:id="@+id/tv_comments"
        android:layout_below="@+id/iv_image"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_toEndOf="@+id/tv_name" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tv_text"
        android:layout_alignStart="@+id/tv_text" />


</RelativeLayout>